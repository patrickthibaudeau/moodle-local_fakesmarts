<div class="row mt-2">
    <div class="col">
        <div class="card">
            <h3 class="card-header">
                {{#can_edit}}
                    <a href="bot.php" class="btn btn-outline-primary float-right">
                        {{#str}}add_bot, local_fakesmarts{{/str}}
                    </a>
                {{/can_edit}}
            </h3>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>{{#str}}name, local_fakesmarts{{/str}}</th>
                        <th>{{#str}}bot_type, local_fakesmarts{{/str}}</th>
                        <th>{{#str}}actions, local_fakesmarts{{/str}}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#bots}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{type_name}}</td>
                            <td>
                                {{#can_edit}}
                                    <a href="bot.php?id={{id}}" class="btn btn-outline-primary">
                                    {{#str}}edit, local_fakesmarts{{/str}}
                                    </a>
                                {{/can_edit}}
                                {{#can_edit_bot_content}}
                                    {{#use_bot_server}}
                                        <a href="content.php?id={{id}}" class="btn btn-outline-primary">
                                        {{#str}}content, local_fakesmarts{{/str}}
                                        </a>
                                    {{/use_bot_server}}
                                {{/can_edit_bot_content}}
                                {{#can_test}}
                                    <a href="test_bot.php?id={{id}}" class="btn btn-outline-primary">
                                    {{#str}}test_bot, local_fakesmarts{{/str}}
                                    </a>
                                {{/can_test}}
                                {{#can_view_bot_logs}}
                                    <a href="bot_logs.php?id={{id}}" class="btn btn-outline-primary">
                                    {{#str}}logs, local_fakesmarts{{/str}}
                                    </a>
                                {{/can_view_bot_logs}}
                                {{#can_delete}}
                                    {{^system_reserved}}
                                        <button class="btn btn-outline-danger delete-bot" data-id="{{id}}">
                                            {{#str}}delete, local_fakesmarts{{/str}}
                                        </button>
                                    {{/system_reserved}}
                                {{/can_delete}}
                            </td>
                        </tr>
                    {{/bots}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>